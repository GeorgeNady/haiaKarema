<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="HaiaKarema" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/MyEditText</item>
        <item name="materialButtonStyle">@style/MyMaterialButtons</item>
    </style>

    <!-- ************************************************* MaterialButton  -->
    <style name="RegisterButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">@dimen/hzPaddingToScreen</item>
        <item name="android:layout_height">@dimen/btn_container_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="cornerRadius">@dimen/_12sdp</item>
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textSize">@dimen/p2_text_size</item>
    </style>

    <!-- ****************************************************** EditText  -->
    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingHorizontal">@dimen/vertical_padding_to_views</item>
    </style>

    <!-- ///////////////////////////////////////////////// Material Button  -->
    <style name="MyMaterialButtons" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/_5sdp</item>
    </style>

    <!-- ****************************************************** Splash screen -->
    <style name="splash_screen_theme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/black</item>
    </style>

    <style name="splash_screen_theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="splash_screen_theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="splash_screen_theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>